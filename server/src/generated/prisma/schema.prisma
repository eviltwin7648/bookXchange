generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  mobile   String
  role     Role
  books    Book[] @relation("OwnerBooks")
}

model Book {
  id          String     @id @default(uuid())
  title       String
  author      String
  genre       String?
  location    String
  contactInfo String
  status      BookStatus @default(AVAILABLE)
  ownerId     String
  owner       User       @relation("OwnerBooks", fields: [ownerId], references: [id])
}

enum Role {
  OWNER
  SEEKER
}

enum BookStatus {
  AVAILABLE
  RENTED
  EXCHANGED
}
